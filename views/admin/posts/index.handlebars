<h1>All Post</h1>



 <table class="table table-bordered">
  <thead>
     <tr>

        <th>Id</th>
        <th>Title</th>
        <th>Status</th>
         <th>Category</th>
        <th>File</th>
        <th>Allow Comment</th>

       </tr>
    </thead>

    <tbody>

    {{#each posts}}
          
         <tr>
             <td>{{id}}</td>
             <td>{{title}}</td>
             <td>{{status}}</td>
                <td>{{category.name}}</td>
             <td><img height="50px" class="img-responsive" src="/uploads/{{file}}"</td>
             <td>{{allowComments}}</td>
             <td>{{generateTime date 'MMMM Do YYYY'}}</td>
             <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td>
             <td>
             
              <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
              
              <button type="submit" class="btn btn-danger">DELETE</button>
              </form>

             </td>
         </tr>

     {{/each}}
    </tbody>
  </table>